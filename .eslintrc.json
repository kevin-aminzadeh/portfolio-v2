{
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "prettier",
    "next",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-sort-props": "error"
  },
  "globals": {
    "React": "writable"
  }
}
